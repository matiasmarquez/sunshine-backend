		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"lib": ["es2017", "dom", "esnext.asynciterable"],
		"paths": {
			"@kl/*": ["./*"]
		}
	},
	"exclude": ["node_modules"]
}
